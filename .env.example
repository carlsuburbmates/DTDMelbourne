# ============================================================================
# DTD Phase 4: Emergency Triage - Environment Variables
# File: .env.example
# Description: Required environment variables for AI integration
# ============================================================================

# ============================================================================
# SUPABASE CONFIGURATION
# ============================================================================

# Supabase project URL
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co

# Supabase anonymous key (public)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Supabase service role key (admin - keep secret!)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ============================================================================
# STRIPE CONFIGURATION
# ============================================================================

# Stripe secret key (test or live)
# Get this from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your-secret-key-here

# Stripe webhook secret
# Get this from: https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret-here

# Stripe publishable key (public - used in frontend)
# Get this from: https://dashboard.stripe.com/apikeys
STRIPE_PUBLISHABLE_KEY=pk_test_your-publishable-key-here

# Stripe price ID for featured placement ($20/day)
# Create this in Stripe Dashboard: Products -> Pricing
STRIPE_PRICE_ID=price_your-price-id-here

# ============================================================================
# Z.AI CONFIGURATION
# ============================================================================

# Z.AI API key
# Get this from: https://api.zai.ai/keys
ZAI_API_KEY=your-zai-api-key-here

# Z.AI model name
# Available models: zai-1, zai-2, zai-3
ZAI_MODEL=zai-1

# Z.AI base URL (optional, defaults to https://api.zai.ai)
ZAI_BASE_URL=https://api.zai.ai

# ============================================================================
# EMERGENCY CASCADE CONFIGURATION
# ============================================================================

# Enable/disable cascade logic (true/false)
# When enabled, Z.AI is used with deterministic fallback
EMERGENCY_CASCADE_ENABLED=true

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================

# Application environment (development, staging, production)
NODE_ENV=development

# Application URL (for Stripe redirects)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ============================================================================
# OPTIONAL: EMAIL CONFIGURATION (for OTP sending)
# ============================================================================

# Email service provider (sendgrid, mailgun, ses, etc.)
EMAIL_SERVICE_PROVIDER=sendgrid

# Email API key
EMAIL_API_KEY=your-email-api-key-here

# Email from address
EMAIL_FROM_ADDRESS=noreply@dogtrainersdirectory.com

# Email from name
EMAIL_FROM_NAME=Dog Trainers Directory

# ============================================================================
# OPTIONAL: SMS CONFIGURATION (for OTP sending)
# ============================================================================

# SMS service provider (twilio, nexmo, etc.)
SMS_SERVICE_PROVIDER=twilio

# SMS API key
SMS_API_KEY=your-sms-api-key-here

# SMS from number
SMS_FROM_NUMBER=+61400000000

# ============================================================================
# OPTIONAL: RATE LIMITING
# ============================================================================

# Rate limit window in seconds
RATE_LIMIT_WINDOW=60

# Rate limit max requests per window
RATE_LIMIT_MAX=100

# ============================================================================
# OPTIONAL: LOGGING
# ============================================================================

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Enable structured logging
LOG_STRUCTURED=true

# ============================================================================
# HEALTH MONITORING CONFIGURATION
# ============================================================================

# Health check interval in seconds
# How often to run health checks (default: 60 seconds)
HEALTH_CHECK_INTERVAL=60

# Health alert threshold
# Number of consecutive failures before creating alert (default: 3)
HEALTH_ALERT_THRESHOLD=3

# ============================================================================
# OPERATOR WORKFLOW CONFIGURATION
# ============================================================================

# Enable operator email notifications
# Send email notifications to operators for task assignments (true/false)
OPERATOR_EMAIL_NOTIFICATIONS=true

# Enable admin email notifications
# Send email notifications to admins for critical alerts (true/false)
ADMIN_EMAIL_NOTIFICATIONS=true

# ============================================================================
# COMMENTS
# ============================================================================

#1. Copy this file to .env and fill in your actual values
#2. Never commit .env to version control
#3. Keep STRIPE_SECRET_KEY and STRIPE_WEBHOOK_SECRET secure
#4. Keep ZAI_API_KEY secure
#5. Use test keys for development, live keys for production
#6. Based on DOCS/05_DATA_AND_API_CONTRACTS.md and D-014 requirement
# ============================================================================
